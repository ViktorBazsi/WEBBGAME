generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(cuid())
  username    String        @unique
  email       String        @unique
  password    String
  role        Role          @default(USER)
  characters  Character[]
}

model Character {
  id          String        @id @default(cuid())
  name        String
  gender      Gender        @default(MALE)
  userId      String
  user        User          @relation(fields: [userId], references: [id])

  money       Int           @default(500)
  day         String        @default("Monday")
  time        Int           @default(8)

  stats       Stats[]
  girlfriends Girlfriend[]
  jobs        Job[]         @relation("CharacterJobs")

  locationId  String?
  location    Location?     @relation(fields: [locationId], references: [id])
}

model Stats {
  id           String       @id @default(cuid())

  characterId  String?
  character    Character?   @relation(fields: [characterId], references: [id], onDelete: Cascade)
  girlfriendId String?
  girlfriend   Girlfriend?  @relation(fields: [girlfriendId], references: [id], onDelete: Cascade)

  str          Int?
  dex          Int?
  int          Int?
  char         Int?

  currStrXp    Int?       @default(0)
  currDexXp    Int?       @default(0)
  currIntXp    Int?       @default(0)
  currCharXp   Int?       @default(0)

  measurementId String?
  measurement   Measurements? @relation(fields: [measurementId], references: [id], onDelete: SetNull)
}

model Girlfriend {
  id          String        @id @default(cuid())
  name        String
  gender      Gender        @default(FEMALE)

  characterId String?
  character   Character?    @relation(fields: [characterId], references: [id])

  stats       Stats[]
  jobs        Job[]         @relation("GirlfriendJobs")

  corruption  Int           @default(0)
  affection   Int           @default(50)

  locationId  String?
  location    Location?     @relation(fields: [locationId], references: [id])
}

model Job {
  id          String         @id @default(cuid())
  name        String
  jobType     String         @default("general")
  requirement String?
  entryLevelXp Int           @default(0)
  str         Int?
  dex         Int?
  int         Int?
  char        Int?
  spec        String?

  level       Int            @default(1)
  xpNeeded    Int            @default(50)          
  xpGained    Int            @default(10)

  length      Int
  money       Int
  
  characters  Character[]    @relation("CharacterJobs")
  girlfriends Girlfriend[]   @relation("GirlfriendJobs")
}

model Activity {
  id          String        @id @default(cuid())

  name        String
  @@unique([name])
  description String?
  img         String?
  length      Int
  location    Location []  @relation("LocationActivity")
  subActivities SubActivity[]
}

model Location {
  id          String        @id @default(cuid())
  name        String

  img         String?

  requirement String?
  description String

  activity    Activity[]    @relation("LocationActivity")

  characters  Character[]
  girlfriends Girlfriend[]
}

model SubActivity {
  id           String     @id @default(cuid())
  name         String
  activityId   String
  activity     Activity   @relation(fields: [activityId], references: [id])
  type         String?
  requirement  String?
  description  String?
  level        Int?       @default(1)
  xpNeeded     Int?       @default(50)
  xpGained     Int?       @default(10)
  reward       Int?

  @@unique([activityId, name])
}

model Measurements {
  id         String   @id @default(cuid())
  strLevel   Int
  gender     Gender?
  weight     Int?
  height     Int?
  biceps     Int?
  quads      Int?
  back       Int?
  chest      Int?
  calves     Int?

  stats      Stats[]

  @@unique([strLevel, gender])
}

model LiftCapacity {
  id           String  @id @default(cuid())
  strLevel     Int
  gender       Gender?
  bicepsCurl   Int?
  benchPress   Int?
  squat        Int?
  latPulldown  Int?

  @@unique([strLevel, gender])
}

enum StatType {
  STR
  DEX
  INT
  CHAR
}

enum Gender {
  MALE
  FEMALE
}

model StatRequirement {
  id        String   @id @default(cuid())
  statType  StatType
  level     Int
  neededXp  Int

  @@unique([statType, level])
}

enum Role {
  USER
  ADMIN
}
