generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(cuid())
  username    String        @unique
  email       String        @unique
  password    String
  role        Role          @default(USER)
  characters  Character[]
}

model Character {
  id          String        @id @default(cuid())
  name        String
  gender      Gender        @default(MALE)
  userId      String
  user        User          @relation(fields: [userId], references: [id])

  charMoney   Int           @default(500)
  householdMoney Int        @default(500)
  day         String        @default("Monday")
  time        Int           @default(480)
  currentTime String        @default("08:00")
  images      String[]      @default([])

  stats       Stats[]
  girlfriends Girlfriend[]
  jobs        Job[]         @relation("CharacterJobs")
  jobProgress CharacterJobProgress[]
  achievements Achievement[] @relation("CharacterAchievements")
  subActivityImages SubActivityImage[]

  locationId  String?
  location    Location?     @relation(fields: [locationId], references: [id])
}

model Stats {
  id           String       @id @default(cuid())

  characterId  String?
  character    Character?   @relation(fields: [characterId], references: [id], onDelete: Cascade)
  girlfriendId String?
  girlfriend   Girlfriend?  @relation(fields: [girlfriendId], references: [id], onDelete: Cascade)

  str          Int?
  dex          Int?
  int          Int?
  char         Int?
  sta          Int?

  currStrXp    Int?       @default(0)
  currDexXp    Int?       @default(0)
  currIntXp    Int?       @default(0)
  currCharXp   Int?       @default(0)
  currStaXp    Int?       @default(0)

  currentStamina Int?     @default(1)

  measurementId String?
  measurement   Measurements? @relation(fields: [measurementId], references: [id], onDelete: SetNull)
}

model Girlfriend {
  id          String        @id @default(cuid())
  name        String
  gender      Gender        @default(FEMALE)

  characterId String?
  character   Character?    @relation(fields: [characterId], references: [id])

  girMoney    Int           @default(500)
  day         String        @default("Monday")
  time        Int           @default(480)
  currentTime String        @default("08:00")
  images      String[]      @default([])

  stats       Stats[]
  jobs        Job[]         @relation("GirlfriendJobs")
  jobProgress GirlfriendJobProgress[]
  achievements Achievement[] @relation("GirlfriendAchievements")
  subActivityImages SubActivityImage[]

  corruption  Int           @default(0)
  affection   Int           @default(50)

  locationId  String?
  location    Location?     @relation(fields: [locationId], references: [id])
}

model Job {
  id          String         @id @default(cuid())
  name        String
  jobType     String         @default("general")
  img         String?
  requirement String?
  description String?
  entryLevelXp Int           @default(0)
  str         Int?
  dex         Int?
  int         Int?
  char        Int?
  staminaCost Int            @default(0)
  spec        String?
  strXp       Int?
  staXp       Int?
  intXp       Int?
  charXp      Int?

  level       Int            @default(1)
  xpNeeded    Int            @default(50)          
  xpGained    Int            @default(10)

  length      Int
  money       Int
  
  characters  Character[]    @relation("CharacterJobs")
  girlfriends Girlfriend[]   @relation("GirlfriendJobs")
  characterProgress CharacterJobProgress[]
  girlfriendProgress GirlfriendJobProgress[]
}

model Achievement {
  id          String        @id @default(cuid())
  name        String
  description String?
  characters  Character[]   @relation("CharacterAchievements")
  girlfriends Girlfriend[]  @relation("GirlfriendAchievements")

  @@unique([name])
}

model CharacterJobProgress {
  id           String     @id @default(cuid())
  characterId  String
  jobId        String
  level        Int        @default(1)
  currentXp    Int        @default(0)

  character    Character  @relation(fields: [characterId], references: [id], onDelete: Cascade)
  job          Job        @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([characterId, jobId])
}

model GirlfriendJobProgress {
  id            String     @id @default(cuid())
  girlfriendId  String
  jobId         String
  level         Int        @default(1)
  currentXp     Int        @default(0)

  girlfriend    Girlfriend @relation(fields: [girlfriendId], references: [id], onDelete: Cascade)
  job           Job        @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([girlfriendId, jobId])
}

model Activity {
  id          String        @id @default(cuid())

  name        String
  @@unique([name])
  description String?
  img         String?
  location    Location []  @relation("LocationActivity")
  subActivities SubActivity[]
}

model Location {
  id          String        @id @default(cuid())
  name        String

  img         String?

  requirement String?
  description String

  activity    Activity[]    @relation("LocationActivity")

  characters  Character[]
  girlfriends Girlfriend[]
}

model SubActivity {
  id           String     @id @default(cuid())
  name         String
  activityId   String
  activity     Activity   @relation(fields: [activityId], references: [id])
  type         String?
  requirement  String?
  description  String?
  images       SubActivityImage[]
  level        Int?       @default(1)
  xpNeeded     Int?       @default(50)
  xpGained     Int?       @default(10)
  reward       Int?
  staminaCost  Int?       @default(1)
  length       Int?       @default(30) // perc

  @@unique([activityId, name])
}

model SubActivityImage {
  id            String      @id @default(cuid())
  subActivityId String
  subActivity   SubActivity @relation(fields: [subActivityId], references: [id], onDelete: Cascade)

  characterId   String?
  character     Character?  @relation(fields: [characterId], references: [id], onDelete: Cascade)
  girlfriendId  String?
  girlfriend    Girlfriend? @relation(fields: [girlfriendId], references: [id], onDelete: Cascade)

  strLevel      Int
  img           String

  @@unique([subActivityId, characterId, strLevel])
  @@unique([subActivityId, girlfriendId, strLevel])
}

model Measurements {
  id         String   @id @default(cuid())
  strLevel   Int
  gender     Gender?
  weight     Int?
  height     Int?
  biceps     Int?
  quads      Int?
  back       Int?
  chest      Int?
  calves     Int?

  stats      Stats[]

  @@unique([strLevel, gender])
}

model LiftCapacity {
  id           String  @id @default(cuid())
  strLevel     Int
  gender       Gender?
  bicepsCurl   Int?
  benchPress   Int?
  squat        Int?
  latPulldown  Int?

  @@unique([strLevel, gender])
}

model EnduranceCapacity {
  id           String  @id @default(cuid())
  staLevel     Int
  gender       Gender?
  distanceKm   Int?
  timeMinutes  Int?

  @@unique([staLevel, gender])
}

model MeasurementsGrowth {
  id            String  @id @default(cuid())
  gender        Gender?
  weightFactor  Float   @default(1.1)
  heightFactor  Float   @default(1.01)
  bicepsFactor  Float   @default(1.1)
  chestFactor   Float   @default(1.1)
  quadsFactor   Float   @default(1.1)
  calvesFactor  Float   @default(1.1)
  backFactor    Float   @default(1.1)

  @@unique([gender])
}

model LiftGrowth {
  id                String  @id @default(cuid())
  gender            Gender?
  bicepsCurlFactor  Float   @default(1.1)
  benchPressFactor  Float   @default(1.1)
  squatFactor       Float   @default(1.1)
  latPulldownFactor Float   @default(1.1)

  @@unique([gender])
}

model EnduranceGrowth {
  id             String  @id @default(cuid())
  gender         Gender?
  distanceFactor Float   @default(1.1)

  @@unique([gender])
}

enum StatType {
  STR
  DEX
  INT
  CHAR
  STA
}

enum Gender {
  MALE
  FEMALE
}

model StatRequirement {
  id        String   @id @default(cuid())
  statType  StatType
  level     Int
  neededXp  Int

  @@unique([statType, level])
}

enum Role {
  USER
  ADMIN
}
